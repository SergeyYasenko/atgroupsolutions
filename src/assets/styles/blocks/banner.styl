.banner
   .container
      padding 55px 0
      margin-bottom 39px

   &__row
      width 100%
      background-color #a00000
      display flex
      align-items center
      justify-content space-evenly

   &__image-pc
      max-width 348px

   &__item-text
      color #fff
      font-size 20px
      font-weight bold
      list-style-type disc

   &__list
      margin 0

@media screen and (max-width: 767px)
   .banner

      &__row
         flex-direction column

      &__item-text
         padding-top 30px