.banner
   .container
      margin-bottom 40px

   &__content
      width 100%
      background-color #a00000
      display flex
      align-items center
      justify-content space-evenly
      padding 55px 15px

   &__image-pc
      max-width 348px

   &__item-text
      color #fff
      font-size 20px
      font-weight bold
      list-style-type disc

   &__list
      margin 0

@media screen and (max-width: 767px)
   .banner

      &__content
         flex-direction column

      &__item-text
         margin-top 30px