body
   background-color #EAECED
   color #343434
   font Tahoma, Arial, sans-serif
.js-lock
   overflow hidden

.main-content
   @media screen and (max-width: 767px)

ul
   margin 0

      &:after
         content ""
         width 100%
         height 100%
         position fixed
         left 0
         top 0
         background rgba(0, 0, 0, 0.5)
         display none
         z-index 29

   &.js-is-active

      &:after
         display block

.container
   padding 0 20px
   margin 0 auto
   max-width 1260px
   @media screen and (max-width: 767px)
      padding 0 10px

.header

   &__row
      display flex
      padding-top 43px
      margin-bottom 43px
      position relative
      @media screen and (max-width: 767px)
         padding 15px 0
         align-items center
         justify-content space-between

   &__logo

      img
         min-width 200px
         height 63px

   &__list
      display flex
      align-items center
      justify-content flex-end
      width 100%
      margin-bottom 0px

   &__item
      padding 19px 16px
      transition all 0.3s ease

      a
         color #343434
         text-decoration none
         &:hover
            text-decoration underline

      &:checked
         background-color #fff

   &__line
      width 30px
      height 5px
      position absolute
      background-color #202924
      transition all 0.3s ease
      top 12px
      right 5px

      &:last-child
         right 5px
         top 25px

   &__burger-list
      display flex
      justify-content space-between

   &__line,
   &__burger-list
      display none

   &__burger-item

      a
         font-size 16px
         color #202925
         margin 0px 40px 10px 0px
         transition all 0.3s ease

      &:last-child
         margin 0

   &__burger-item

      &:hover
         opacity 0.7

   @media screen and (max-width: 767px)

      &__line
         display block

      &__burger-btn
         position relative
         width 40px
         height 40px
         margin-left 30px

      &__burger-close
         position absolute
         top 35px
         right 10px
         width 40px
         height 40px

         .header__line
            transform translateY(0px) rotate(125deg)
            transition all 0.2s ease

            &:last-child
               transform translateY(-12px) rotate(55deg)
               transition all 0.2s ease

      &__menu-nav
         width 80%
         height 100%
         position fixed
         right -100%
         top 0
         background-color #f2f3f7
         transition all 0.3s ease
         z-index 30
         display flex
         flex-direction column
         overflow-y scroll
         padding 90px 20px 40px 40px

      .js-is-active

      &:last-child
         height 100%
         position fixed
         right 0
         top 0
         background-color #f2f3f7
         transition all 0.3s ease
         z-index 30

      &__burger-list
         display block
         margin 0

      &__burger-item

         a
            font-size 24px
            line-height 136.4%
            color #202925
            display inline-block

      &__list
         display none

.banner

   &__row
      width 100%
      background-color #a00000
      display flex
      align-items center
      justify-content space-evenly
      padding 55px 20px
      margin-bottom 39px
      @media screen and (max-width: 767px)
         flex-direction column

   &__item-text
      color #fff
      font-size 20px
      font-weight bold
      list-style-type disc
      @media screen and (max-width: 767px)
         padding-top 30px

   &__list
      margin 0

.about

   &__row
      display flex
      @media screen and (max-width: 767px)
         flex-direction column

   &__title
      font 28px "Trebuchet MS", Arial, Helvetica, sans-serif
      color #BC0000
      margin-bottom 20px

   &__text
      margin-bottom 21px
      color #343434
      line-height 24px
      padding-right 15px
      flex-basis 831px

   &__item
      font 13px Tahoma, Arial, sans-serif

      a
         color #BC0000
         text-decoration underline
         font 13px Tahoma, Arial, sans-serif
         padding-bottom 5px
         display inline-block
         &:hover
            text-decoration none

   &__card
      min-width 290px
      @media screen and (max-width: 767px)
         min-width 250px

   &__card-list
      width 100%
      background-color #a80000
      margin-bottom 17px
      display flex
      flex-direction column
      align-items center
      padding 42px 20px
      text-align center

   &__card-item

      a
         color #fc0
         font 13px Tahoma, Arial, sans-serif
         text-decoration underline
         &:hover
            text-decoration none

   &__card-text
      color #fff
      font 13px Tahoma, Arial, sans-serif

.footer

   &__row
      padding 40px 20px
      background-color #a00000
      display flex
      align-items center

   &__text
      font 13px Tahoma, Arial, sans-serif
      color #fff

