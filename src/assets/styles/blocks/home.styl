body
   background-color #EAECED
   color #343434
   font-family Tahoma, Arial, sans-serif

.js-lock
   overflow hidden

.page
   padding 0 20px

.container
   margin 0 auto
   max-width 1260px

@media screen and (max-width: 767px)

   .page
      padding 0 10px

   .main-content
      &:after
         content ""
         width 100%
         height 100%
         position fixed
         left 0
         top 0
         background rgba(0, 0, 0, 0.5)
         display none
         z-index 29

      &.js-is-active

         &:after
            display block